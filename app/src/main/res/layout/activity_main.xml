<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="24dp"
        android:text="@string/OK"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/enterNum"
        tools:layout_editor_absoluteX="70dp" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:text="@string/EntRegNum"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/enterNum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="8dp"

        android:ems="10"
        android:hint="@string/obr"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/ok_button"
        tools:layout_editor_absoluteX="70dp" />

    <TextView
        android:id="@+id/out_rez"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="35dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/main_text"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/NUM"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/enterNum"
        app:layout_constraintTop_toBottomOf="@id/out_rez"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/regionFlag"
        android:layout_width="262dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FedOkr" />

    <TextView
        android:id="@+id/FedOkr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ok_button"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/FlagOfRussia"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out_rez" />

    <TextView
        android:id="@+id/RUS"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginEnd="68dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out_rez" />


</androidx.constraintlayout.widget.ConstraintLayout>